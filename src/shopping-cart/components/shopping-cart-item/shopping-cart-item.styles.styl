.shopping-cart-item
    display flex
    align-items center
    max-height 120px
    margin-bottom 1em
    padding 0 0

    &__preview
        max-width 120px
        margin-right 2em
        border-radius 6px

    &__info
        flex 1
        padding 10px

        &-title
            display block

        &-price
            margin-top 20px
            color gray

    &__actions
        display flex
        align-items center
        justify-content flex-end

        &-amount
            max-width 75px
            margin 1em
            line-height 18px
            font-size 16px

        &-total
            min-width 75px
            margin 1em
            line-height 18px
            font-size 16px
            font-weight 700

        &-delete
            display flex
            justify-content center
            align-items center
            padding 0.25em
            cursor pointer
            border-radius 3px

            &:hover
            &:focus
                background-color #c7c7c7

            &:active
                background-color #d4d4d4
