.admin-categories
    &__title
        font-size 18px
        line-height 22px
        font-weight bold
        margin-bottom 15px

    &__item
        display flex
        justify-content space-between
        height 40px

        &-title
            font-size 16px
            line-height 18px

        &-delete
            display flex
            justify-content center
            align-items center
            padding 0.25em
            cursor pointer
            border-radius 3px

            &:hover
            &:focus
                background-color #c7c7c7

            &:active
                background-color #d4d4d4

