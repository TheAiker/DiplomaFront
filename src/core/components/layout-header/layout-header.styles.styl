$header-height = 48px

.layout-header
    position fixed
    top 0
    left 0
    width 100vw
    height $header-height
    color #eee
    background-color #333
    box-shadow 0 0 4px rgba(0,0,0,0.05)
    user-select none
    overflow hidden
    z-index 5

    &__wrapper
        display flex
        align-items center
        justify-content space-between
        max-width 1440px
        height 100%
        margin 0 auto
        padding 0 20px

        & > *
            flex 1

            &:not(:first-child):not(:last-child)
                display flex
                justify-content center

            &:last-child
                display flex
                justify-content flex-end

    &__title
        flex 1
        height 100%
        font-size 20px
        font-weight bold

        &-label > span
            color #e83a3a

    &__link-group
        flex 1
        height 100%
        display flex
        align-items center

    &__link
    &__link:visited
        color white
        text-decoration none

    &__link
        display flex
        align-items center
        height 100%
        padding 0 1em

        &:hover
            background-color #444

        &--selected
            color red

        &--title
            max-width 200px

    &__shopping-cart
        flex 1
        height 100%

        &-link
        &-link:visited
            display flex
            align-items center
            color #eee
            text-decoration none

        &-nudge
            min-width 25px
            margin-left 4px
            padding 2px 6px
            border-radius 6px
            color #eee
            background-color #444
            text-align center
