.product
    display flex
    flex-direction column
    align-items center
    width calc(100% / 4)
    padding 0 1em 1em
    overflow hidden
    cursor pointer

    &__image
        width 100%
        border-radius 6px
        user-select none

    &__info
        display flex
        flex-direction column
        justify-content space-between
        width 100%
        padding 0.5em 1em
        text-align center

        &-name
            font-weight 300
            color #a3a3a3

        &-price
            font-weight 700
