.layout-full
    display flex
    flex-direction column
    justify-content space-between
    width 100vw
    height calc(100% - 45px)
    margin-top 45px
    overflow-y auto

    &__wrapper
        flex 1
        width 100%
        min-width 960px
        max-width 1440px
        margin 0 auto
        padding 0 20px

    &__banner
        height 300px
        margin 1em
        user-select none

        &-image
            max-width 100%
            max-height 100%
            display block
            margin 0 auto

    &__divider
        width 100%
        min-width 960px
        max-width 1440px
        min-height 8px
        margin 0 auto 1em
        border-radius 6px
        background-color #333

